{
  "name": "make-appointment",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "pnpm i",
    "db": "docker compose up",
    "db:down": "docker compose down",
    "dev": "pnpm --parallel -F frontend dev",
    "up": "docker compose up",
    "preview:fe": "pnpm -F frontend build && pnpm -F frontend preview",
    "serve": "pnpm run up --build -d && pnpm run preview:fe",
    "lint:eslint": "pnpm -F frontend -F backend lint:eslint",
    "lint:prettier": "pnpm -F frontend -F backend lint:prettier",
    "test": "pnpm -F frontend -F backend test",
    "postinstall": "npx simple-git-hooks"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lint-staged": "^13.3.0",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "preserveUnused": [
      "commit-msg"
    ]
  },
  "packageManager": "pnpm@10.0.0-alpha.2+sha512.f18a59ca3611002321af7681e6d49234cb3ece8496b05818be5b1081168ec21b8c3d28cbb4351e2fdec66ca95e6516faaf08b95b755013c88cf5174d5029865c",
  "pnpm": {
    "overrides": {}
  }
}
